<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.RegistrationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/reg_user_name"
            android:layout_width="match_parent"
            android:hint="F. I. O."
            android:layout_marginVertical="8dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/reg_login"
            android:layout_width="match_parent"
            android:layout_marginVertical="8dp"
            android:hint="Login"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/reg_password"
            android:layout_width="match_parent"
            android:layout_marginVertical="8dp"
            android:hint="Parol"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/reg_repassword"
            android:layout_width="match_parent"
            android:layout_marginVertical="8dp"
            android:hint="Takroriy parol"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/reg_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:entries="@array/roles"/>
        <Spinner
            android:id="@+id/reg_grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:visibility="gone"
            android:entries="@array/grades"/>

        <EditText
            android:id="@+id/group_name"
            android:visibility="gone"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Group name"/>
        <EditText
            android:id="@+id/subject"
            android:visibility="gone"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject"/>

        <Button
            android:id="@+id/reg_registration"
            android:layout_width="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="Ro'yhatdan o'tish"
            android:layout_height="wrap_content"/>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>